{
  "name": "voice-ai-expense-tracker",
  "version": "1.0.0",
  "description": "Voice AI Telegram bot for expense tracking with smart categorization",
  "main": "src/index.js",
  "scripts": {
    "start": "node src/index.js",
    "dev": "nodemon src/index.js",
    "local": "NODE_ENV=development USE_WEBHOOK=false nodemon src/index.js",
    "local:prod": "NODE_ENV=production USE_WEBHOOK=false node src/index.js",
    "test:local": "node test-local.js",
    "check:local": "node test-local.js && npm run local",
    "setup:local": "cp local-test.env .env && echo 'Local environment file created. Please edit .env with your actual credentials.'",
    "safe:test": "node test-bot-setup.js",
    "mode:webhook": "node switch-mode.js webhook",
    "mode:polling": "node switch-mode.js polling"
  },
  "keywords": [
    "telegram",
    "bot",
    "voice",
    "ai",
    "expense",
    "tracker",
    "openai",
    "whisper"
  ],
  "author": "Voice AI Tracker Team",
  "license": "MIT",
  "dependencies": {
    "node-telegram-bot-api": "^0.64.0",
    "express": "^4.18.2",
    "@supabase/supabase-js": "^2.39.0",
    "openai": "^4.28.0",
    "googleapis": "^129.0.0",
    "dotenv": "^16.3.1",
    "axios": "^1.6.7",
    "form-data": "^4.0.0",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "nodemon": "^3.0.3"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}